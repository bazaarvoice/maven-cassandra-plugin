<project
    xmlns="http://maven.apache.org/POM/4.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <!--
        This pom redefines schema code generation so that the XmlBean java classes are generated
        into a java package that *includes* the schema version number.
    -->

    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.bazaarvoice.product.schema</groupId>
        <artifactId>product-schema-parent</artifactId>
        <version>1.0-SNAPSHOT</version>
        <relativePath>./pom.xml</relativePath> <!-- not a typo; our parent pom.xml is adjacent to this one -->
    </parent>

    <artifactId>product-schema-namespaced-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
    <packaging>pom</packaging>

    <properties>
        <xsdconfig.file>src/main/xsdconfig/bv-all-${xml.version}.namespaced.xsdconfig</xsdconfig.file>
    </properties>

</project>
